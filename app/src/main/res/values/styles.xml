<resources>

		<!-- Base application theme. -->
		<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
				<!-- Customize your theme here. -->
				<item name="colorPrimary">@color/colorActionBar</item>
				<item name="colorPrimaryDark">@color/colorStatusBar</item>
				<item name="colorAccent">@color/colorAccent</item>
		</style>

		<!-- Splash Screen Theme. -->
		<style name="SplashScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
				<item name="colorPrimaryDark">@color/colorActionBar</item>
				<item name="android:windowNoTitle">true</item>
		</style>

</resources>
